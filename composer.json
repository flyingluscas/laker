{
    "name": "flyingluscas/laker",
    "type": "library",
    "description": "Laravel package to track down bugs.",
    "keywords": [
        "flyingluscas",
        "laker",
        "bugs",
        "issue",
        "bitbucket"
    ],
    "homepage": "https://github.com/flyingluscas/laker",
    "license": "MIT",
    "authors": [
        {
            "name": "Lucas Pires",
            "email": "lucas.pires.mattos@gmail.com",
            "homepage": "https://github.com/flyingluscas",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~5.6|~7.0",
        "illuminate/support": "5.1.*|5.2.*|5.3.*",
        "gentle/bitbucket-api": "^0.8"
    },
    "require-dev": {
        "mockery/mockery": "^0.9.5",
        "orchestra/testbench": "3.1.*|3.2.*|3.3.*",
        "phpunit/phpunit": "~4.0||~5.0",
        "squizlabs/php_codesniffer": "~2.3"
    },
    "autoload": {
        "psr-4": {
            "FlyingLuscas\\Laker\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "FlyingLuscas\\Laker\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "format": "phpcbf --standard=psr2 src/"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
